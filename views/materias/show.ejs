<h1>Materia</h1>

<a href="/materias/add" class="btn btn-success mb-3">Add Matéria</a>
<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% materias.forEach(materia=> { %>
            <tr>
                <td>
                    <%= materia.id %>
                </td>
                <td>
                    <%= materia.nome %>
                </td>
                <td>
                    <a href="/materias/edit/<%= materia.id %>" class="btn btn-primary btn-sm">Editar</a>
                    <form action="/materias/delete/<%= materia.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>

            <% }) %>
    </tbody>
</table>