<h1>Categorias</h1>

<a href="/categorias/add" class="btn btn-success mb-3">Add Categoria</a>
<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% categorias.forEach(categoria=> { %>
            <tr>
                <td>
                    <%= categoria.id %>
                </td>
                <td>
                    <%= categoria.nome %>
                </td>
                <td>
                    <a href="/categorias/edit/<%= categoria.id %>" class="btn btn-primary btn-sm">Editar</a>
                    <form action="/categorias/delete/<%= categoria.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>

            <% }) %>
    </tbody>
</table>